<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp04"
    android:layout_marginRight="@dimen/dp04"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/dp02"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp16">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/headingView"
            android:layout_width="@dimen/dp00"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/yale_blue"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"
            android:layout_marginTop="@dimen/dp08"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingView"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/detailView"
            android:layout_width="@dimen/dp00"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp08"
            android:layout_marginRight="@dimen/dp08"
            android:layout_marginTop="@dimen/dp08"
            android:text=""
            android:textColor="@color/grey21"
            android:textSize="@dimen/sp12"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingView" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>